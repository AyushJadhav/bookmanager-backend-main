type Query {
  findAllBooks: [Book!]!
  getBookById(id: ID!): Book
}

type Book {
  id: ID!
  title: String!
  author: String!
  publishedDate: String!
}

input BookInput {
  title: String!
  author: String!
  publishedDate: String!
}

type Mutation {
  createBook(book: BookInput!): Book
  updateBook(id: ID!, book: BookInput!): Book
  deleteBook(id: ID!): Boolean
}
